<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="heading offset-2"><%= listing.title %></h3>

    <div class="card col-7 offset-2 listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          Owned by: <b><i><%= listing.owner.username %></i></b>
        </p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>
  </div>
</div>
<div class="btns">
  <a href="/listings/<%= listing.id %>/edit" class="btn btn-primary">Edit</a>
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-danger">Delete</button>
  </form>
</div>

<div class="col-8 offset-3">
  <hr />
  <h4>Leave a Review</h4>
  <form
    method="POST"
    action="/listings/<%= listing._id %>/reviews"
    class="needs-validation"
    novalidate
  >
    <div class="mt-3">
      <label for="rating" class="form-label">Review</label>
      <input
        type="range"
        id="rating"
        name="review[rating]"
        min="1"
        max="5"
        class="form-range"
      />
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        class="form-control"
        rows="5"
        cols="10"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter a comment</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <hr />
  <p><b>All Reviews</b></p>
  <div class="row">
    <% for(let review of listing.reviews){ %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body mt-2">
        <h5 class="card-title">Jone Doe</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %>/5 stars</p>
      </div>
      <form
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
        method="POST"
        class="mb-3 mt-3"
      >
        <button class="btn btn-outline-danger btn-sm">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
